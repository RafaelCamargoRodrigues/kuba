{
  "author": "Cleber de Moraes Gon√ßalves <cleber.engineer@gmail.com>",
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.2.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "blocks/feature/**/*.{css,js,jsx}": "yarn workspace @rex/feature lint-staged --allow-empty",
    "blocks/header/**/*.{css,js,jsx}": "yarn workspace @rex/header lint-staged --allow-empty",
    "blocks/footer/**/*.{css,js,jsx}": "yarn workspace @rex/footer lint-staged --allow-empty",
    "blocks/hero/**/*.{css,js,jsx}": "yarn workspace @rex/hero lint-staged --allow-empty",
    "buckets/rexsnap/**/*.{css,js,jsx}": "yarn workspace @rex/rexsnap lint-staged --allow-empty",
    "pixels/ga/**/*.{css,js,jsx}": "yarn workspace @rex/ga lint-staged --allow-empty",
    "pixels/gtag/**/*.{css,js,jsx}": "yarn workspace @rex/gtag lint-staged --allow-empty",
    "pixels/gtm/**/*.{css,js,jsx}": "yarn workspace @rex/gtm lint-staged --allow-empty",
    "pixels/hotjar/**/*.{css,js,jsx}": "yarn workspace @rex/hotjar lint-staged --allow-empty",
    "pixels/ld+json/**/*.{js,jsx}": "yarn workspace @rex/ldjson lint-staged --allow-empty",
    "pixels/markup/**/*.{js,jsx}": "yarn workspace @rex/markupt lint-staged --allow-empty",
    "pixels/reset/**/*.css": "yarn workspace @rex/reset lint-staged --allow-empty",
    "pixels/sw/**/*.{css,js,jsx}": "yarn workspace @rex/sw lint-staged --allow-empty",
    "pixels/theme/**/*.css": "yarn workspace @rex/theme lint-staged --allow-empty",
    "pixels/trackjs/**/*.{css,js,jsx}": "yarn workspace @rex/trackjs lint-staged --allow-empty",
    "shared/agent/**/*.{js,jsx}": "yarn workspace @rex/agent lint-staged --allow-empty",
    "shared/f/**/*.{js,jsx}": "yarn workspace @rex/f lint-staged --allow-empty",
    "shared/h/**/*.{js,jsx}": "yarn workspace @rex/h lint-staged --allow-empty",
    "shared/hook/**/*.{js,jsx}": "yarn workspace @rex/hook lint-staged --allow-empty",
    "shared/radio/**/*.{js,jsx}": "yarn workspace @rex/radio lint-staged --allow-empty",
    "shared/router/**/*.{js,jsx}": "yarn workspace @rex/router lint-staged --allow-empty",
    "tags/button/**/*.{css,js,jsx}": "yarn workspace @rex/button lint-staged --allow-empty",
    "tags/link/**/*.{css,js,jsx}": "yarn workspace @rex/link lint-staged --allow-empty",
    "tags/logo/**/*.{css,js,jsx}": "yarn workspace @rex/logo lint-staged --allow-empty",
    "tags/picture/**/*.{css,js,jsx}": "yarn workspace @rex/picture lint-staged --allow-empty",
    "tags/text/**/*.{css,js,jsx}": "yarn workspace @rex/text lint-staged --allow-empty"
  },
  "name": "rex",
  "private": true,
  "scripts": {
    "setup": "yarn install && yarn add husky -D -W"
  },
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "actions/*",
      "blocks/*",
      "buckets/*",
      "pixels/*",
      "shared/*",
      "tags/*"
    ]
  }
}
