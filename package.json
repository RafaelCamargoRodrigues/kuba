{
  "name": "Rex.JS",
  "version": "1.0.0",
  "description": "Simples, pequeno e imperfeito. Uma visão além da programação",
  "private": false,
  "scripts": {
    "serve": "webpack-dev-server --config webpack.dev.js --open",
    "lift": "webpack --config webpack.prod.js && firebase deploy",
    "test": "jest --detectOpenHandles"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "jest"
    }
  },
  "author": "Cleber de Moraes Gonçalves <cleber.engineer@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/parser": "^1.13.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.1.0",
    "csv-loader": "^3.0.2",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-config-standard-react": "^8.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.13.6",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^4.1.0",
    "firebase-tools": "^7.3.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "jest-puppeteer": "^4.3.0",
    "jsdom": "^15.1.1",
    "lint-staged": "^9.2.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "puppeteer": "^1.18.1",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1",
    "workbox-webpack-plugin": "^4.3.1",
    "xml-loader": "^1.2.1"
  },
  "dependencies": {
    "ramda": "^0.26.1"
  }
}
