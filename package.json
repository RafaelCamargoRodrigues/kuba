  },
  "private": false,
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js",
    "test": "run-s test:*",
    "test:branch": "git-branch-is master",
    "test:run": "cypress run",
    "lift": "run-s lift:*",
    "lift:branch": "git-branch-is master",
    "lift:build": "webpack --config webpack.prod.js",
    "lift:deploy": "firebase deploy --token \"$FIREBASE_TOKEN\""
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "run-s test:* lift:*"
    }
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.1.2",
    "@typescript-eslint/parser": "^1.13.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "csv-loader": "^3.0.3",
    "cypress": "^4.5.0",
    "eslint": "^6.8.0",
